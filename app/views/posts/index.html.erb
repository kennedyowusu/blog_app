<div class="">
  <%= render @user %>

  <ul>
    <% @posts.each do |post| %>
      <li class="">
        <%= render post %>

        <ul class="bio">
          <% post.recent_comments.each do |comment| %>
            <li>
              <%= content_tag :span, "#{comment.author.name} : #{comment.text}" %>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</div>
