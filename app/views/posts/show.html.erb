<div class="single-post-page">
  <%= content_tag :div, class: "single-post-container" do %>
  <%= content_tag :div, class: "post-head" do %>

    <div class="single-post-header">
      <h4><%= content_tag :span, "Post # #{@post.id} by  #{@user.name}" %></h4>
      <%= content_tag :span, "Comments: #{@post.comments_counter} Likes: #{@post.likes_counter}" %>
    </div>

  <% end %>

  <h1 class="single-post-title"><%= @post.title %></h1>
  <p class="single-post-text">
    <%= @post.text %>
  </p>

  <p class="single-post-like">
    <%= render "likes/counter" %>
  </p>

  <ul class="single-post-comment">
  <%= content_tag_for :li, @post.comments, class: "single-post-comment-item" do |comment| %>
    <%= content_tag :span, "#{comment.author.name} : #{comment.text}" %>
  <% end %>
</ul>

  <%= link_to "Create new comment", new_user_post_comment_path(@user, @post), class: "single-see-all-post" %>

  <% end %>
</div>

