<section>
  <h2>Add a comment</h2>

  <%= form_with model: [@post, Comment.new], data: { turbo: false } do |form| %>
    <div>
      <%= form.label :text %>
      <%= form.text_field :text, required: true, autofocus: true, placeholder: 'Leave a comment', class: 'form-input' %>
    </div>

    <%= form.submit "Comment", class: 'form-input' %>
  <% end %>
</section>