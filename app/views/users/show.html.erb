<div class="container">
  <%= render @user %>

  <ul>
    <% @posts.each do |post| %>
      <li class="item">
        <%= render post %>

        <ul class="bio">
          <% post.recent_comments.each do |comment| %>
            <li>
              <%= render comment %>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</div>
