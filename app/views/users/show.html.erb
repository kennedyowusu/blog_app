<h1 class="text-seondary mb-5">Single user</h1>

<div class="d-flex align-items-center mb-3 gap-3 w-100">
  <div>
    <img src="<%= @user.photo %>" alt="user photo" class= "border border-dark border-5 p-5">
  </div>
  <div class=" border border-dark border-5 w-100 p-3">
    <h2 class="flex-grow-1 p-2"> <%= @user.name %></h2>
    <div class="d-flex justify-content-end">
      <p>Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>
</div>

<div class="border border-dark border-5 mx-auto w-100 p-3 mb-3">
  <h2>Biography</h2>
  <p><%= @user.bio %></p>
</div>

<div>
  <% @user.recent_posts.each do |post| %>
    <div class="border border-dark border-5 mx-auto w-100 p-3 mb-3">
      <h2>Post #<%= post.id %></h2>
      <p><%= post.text %></p>

      <div class="d-flex justify-content-end">
        <span>Comments: <%= "#{post.comments_counter || 0 } "%></span>
        <span>, Likes: <%= "#{ post.likes_counter || 0 }"%></span>
      </div>
    </div>
  <% end %>
  <div class="text-center">
    <a href=<%= "/users/#{@user.id}/posts"%> class="btn btn-primary btn-outline-secondary text-dark">
    See All Posts
  </a>
  </div>
</div>
