<h1>Forgot Your Password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "password-reset-form") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <p>Please enter the email address associated with your account. We'll send you an email with instructions on how to reset your password.</p>

  <div class="input-field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="submit-button">
    <%= f.submit "Send Password Reset Instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<style>
  .password-reset-form {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
</style>
